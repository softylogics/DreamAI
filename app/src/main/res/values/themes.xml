<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DreamAI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="searchViewStyle">@style/CustomSearchView</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.DreamAI.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">2000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.DreamAI</item>
    </style>
    <style name="DreamAI.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Add other attributes as needed -->
        <item name="hintTextAppearance">@style/App.TextInputLayout.HintText</item>
        <item name="background">@style/App.TextInputLayout.HintText</item>
    </style>
    <style name="App.TextInputLayout.HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">?android:attr/textColorHint</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Set text color for the hint -->
        <item name="android:textColorHint">@color/searchview_hint_color</item>
    </style>
    <color name="searchview_hint_color">#A0A0A0</color>
    <style name="BottomNavigationItemTextAppearanceInactive">

        <item name="itemTextAppearanceInactive">@color/bottom_navigation_tint_inactive</item>


    </style>
    <style name="BottomNavigationItemTextAppearanceActive">


        <item name="itemTextAppearanceActive">@color/bottom_navigation_tint</item>

    </style>

    <style name="TextView">
        <item name="android:textColor" >@color/black</item>
            
    </style>

    

    

    <style name="Theme.DreamAI.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DreamAI.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DreamAI.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>